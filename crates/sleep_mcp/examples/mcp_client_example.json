{
  "description": "MCP Client Examples for Sleep Server",
  "tools": {
    "sleep": {
      "description": "Sleep for a specified duration (non-blocking, returns operation ID)",
      "examples": [
        {
          "name": "Basic Non-blocking Sleep",
          "arguments": {
            "duration": "10s",
            "message": "Processing data"
          }
        },
        {
          "name": "Long Sleep with Progress Tracking",
          "arguments": {
            "duration": "2m",
            "message": "Waiting for deployment"
          }
        }
      ]
    },
    "sleep_blocking": {
      "description": "Sleep for a specified duration (blocking, waits for completion)",
      "examples": [
        {
          "name": "Blocking Sleep",
          "arguments": {
            "duration": "5s",
            "message": "Synchronous wait"
          }
        },
        {
          "name": "Service Startup Wait",
          "arguments": {
            "duration": "30s",
            "message": "Waiting for service to start"
          }
        }
      ]
    },
    "sleep_until": {
      "description": "Sleep until a specific timestamp",
      "examples": [
        {
          "name": "Scheduled Maintenance",
          "arguments": {
            "target_time": "2025-01-15T02:00:00Z",
            "message": "Maintenance window"
          }
        },
        {
          "name": "Meeting Time",
          "arguments": {
            "target_time": "2025-01-15T14:30:00Z",
            "message": "Team meeting"
          }
        }
      ]
    },
    "get_sleep_status": {
      "description": "Get current operation status",
      "examples": [
        {
          "name": "Basic Status",
          "arguments": {
            "detailed": false
          }
        },
        {
          "name": "Detailed Status",
          "arguments": {
            "detailed": true
          }
        },
        {
          "name": "Specific Operation Status",
          "arguments": {
            "detailed": true,
            "operation_id": "abc123-def456-789"
          }
        }
      ]
    },
    "cancel_operation": {
      "description": "Cancel a specific operation by ID",
      "examples": [
        {
          "name": "Cancel Specific Operation",
          "arguments": {
            "operation_id": "abc123-def456-789"
          }
        }
      ]
    },
    "cancel_sleep": {
      "description": "Cancel all active operations",
      "examples": [
        {
          "name": "Cancel All Operations",
          "arguments": {}
        }
      ]
    }
  },
  "resources": {
    "sleep://status": "Server and operation status",
    "sleep://help": "Comprehensive help documentation",
    "sleep://examples": "Usage examples and patterns"
  },
  "common_patterns": {
    "test_automation_non_blocking": {
      "description": "Add non-blocking delays between test steps",
      "example": {
        "tool": "sleep",
        "arguments": {
          "duration": "2s",
          "message": "Waiting for UI to load"
        }
      }
    },
    "test_automation_blocking": {
      "description": "Add blocking delays for synchronous test steps",
      "example": {
        "tool": "sleep_blocking",
        "arguments": {
          "duration": "5s",
          "message": "Waiting for service startup"
        }
      }
    },
    "rate_limiting": {
      "description": "Control API request frequency with non-blocking sleep",
      "example": {
        "tool": "sleep",
        "arguments": {
          "duration": "1s",
          "message": "Rate limit delay"
        }
      }
    },
    "scheduled_tasks": {
      "description": "Wait until specific time",
      "example": {
        "tool": "sleep_until",
        "arguments": {
          "target_time": "2025-01-15T03:00:00Z",
          "message": "Daily backup window"
        }
      }
    },
    "operation_management": {
      "description": "Track and manage multiple concurrent operations",
      "examples": [
        {
          "description": "Check status of all operations",
          "tool": "get_sleep_status",
          "arguments": {
            "detailed": true
          }
        },
        {
          "description": "Cancel specific operation",
          "tool": "cancel_operation",
          "arguments": {
            "operation_id": "operation-id-here"
          }
        }
      ]
    }
  }
}
